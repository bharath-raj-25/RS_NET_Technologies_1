@model IEnumerable<RSTechnologiesWeb.Models.AboutUs>

<div class="container mt-5">
    <!-- About Us Section -->
    <div class="text-center fade-in">
        <h1 class="display-4 text-danger">About RS Technologies</h1>
        <p class="lead text-muted">Your trusted institute for IT courses and professional training.</p>
    </div>

    @foreach (var item in Model)
    {
        <div class="card my-4 shadow slide-up">
            <div class="card-body">
                <h2 class="card-title text-primary">@item.Title</h2>
                <p class="card-text">@item.Description</p>
            </div>
        </div>
    }

    <!-- Promotional Section with Animation -->
    <section class="promo-section text-white text-center py-5 slide-in">
        <h2>Why Choose RS Technologies?</h2>
        <p>We provide industry-leading IT courses with real-world projects, expert trainers, and 100% practical learning.</p>
        <a href="/Courses/Index" class="btn btn-light btn-lg mt-3 scale-on-hover">Explore Our Courses</a>
    </section>

    <!-- Contact Details Section -->
    <div class="contact-section bg-light p-4 mt-5 rounded shadow fade-in">
